<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lsh.wms.core.dao.baseinfo.BassinfoItemTypeRelationDao" >

	<resultMap id="bassinfoItemTypeRelationResultMap" type="BassinfoItemTypeRelation">
		<id property="id" column="id"/>
		<result property="itemTypeId" column="item_type_id"/>
		<result property="itemMutexId" column="item_mutex_id"/>
	</resultMap>
  
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="BassinfoItemTypeRelation">
		insert into bassinfo_item_type_relation (
			item_type_id,item_mutex_id
    	) values (
			#{itemTypeId},#{itemMutexId}
    	)
	</insert>

	<update id="update" parameterType="BassinfoItemTypeRelation">
		update bassinfo_item_type_relation
    	<set>
  			<if test="itemTypeId != null">item_type_id=#{itemTypeId},</if>
  			<if test="itemMutexId != null">item_mutex_id=#{itemMutexId}</if>
		</set>
		where id=#{id}
	</update>
  
	<select id="getBassinfoItemTypeRelationById" parameterType="int" resultMap="bassinfoItemTypeRelationResultMap">
		select * from bassinfo_item_type_relation
		where ID=#{id} 
	</select>
  
	<select id="countBassinfoItemTypeRelation" parameterType="map" resultType="int">
		select count(*) from bassinfo_item_type_relation
		<include refid="queryCondition"/>
	</select>
  
	<select id="getBassinfoItemTypeRelationList" parameterType="map" resultMap="bassinfoItemTypeRelationResultMap">
		select * from bassinfo_item_type_relation
		<include refid="queryCondition"/>
		<if test="start != null and limit != null">
		limit #{start},#{limit}
		</if>
	</select>
  
	<sql id="queryCondition">
		<where>
			<if test="id != null">id=#{id}</if>
			<if test="itemTypeId != null">and item_type_id=#{itemTypeId}</if>
			<if test="itemMutexId != null">and item_mutex_id=#{itemMutexId}</if>
		</where>
	</sql>
   
</mapper>